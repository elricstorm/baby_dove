begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "baby_dove"
    gem.summary = "Example Engine for Rails 3"
    gem.email = "jdezenzio@gmail.com"
    gem.authors = ["Joel Dezenzio"]
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*", "{public}/**/*"]
  end
  Jeweler::GemcutterTasks.new
rescue
  puts "Jeweler or dependency not available."
end